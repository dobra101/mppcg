            s_BLOCKS(Expr_0),
            mppcg_member(Expr_b, Expr_0), 
            s_ROUTES(Expr_1),
            mppcg_member(Expr_r, Expr_1), 
            c_nxt(Expr_2),
            mppcg_domain(Expr_2, Expr_3),
            mppcg_member(Expr_r, Expr_3), 
